
@{
    ViewData["Title"] = "Home";
}

@if (this.Context.Session.GetString("loggedUser") == null)
{
    <div class="card bg-light mb-3" style="max-width: 18rem;">
        <div class="card-header">Hello, visitor! You've found the best book website!</div>
        <div class="card-body">
            <h5 class="card-title">Psssstt!!!</h5>
            <p class="card-text">Please, log in to view all of our website's content.</p>
        </div>
    </div>
}
else
{
    <div class="card text-white bg-warning mb-3" style="max-width: 18rem;">
        <div class="card-header">Welcome, @this.Context.Session.GetString("loggedUser")</div>
        <div class="card-body">
            <h5 class="card-title"></h5>
            <p class="card-text">Have a look of our books</p>
        </div>
    </div> 

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://images.thequint.com/thequint/2015-06/3070b06d-f64e-4c14-b4b6-538ff3509c62/1984" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://theculturetrip.com/wp-content/uploads/2018/01/2769211423_33999bc152_b.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://media-cldnry.s-nbcnews.com/image/upload/newscms/2020_50/3434240/201208-2x1-good-reads-2020-ew-230p.jpg" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        }


